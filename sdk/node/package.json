{
  "name": "@hpkv/websocket-client",
  "version": "1.2.0",
  "description": "HPKV WebSocket client for Node.js",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --testTimeout=30000",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "example": "ts-node examples/basic-usage.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "check": "npm run lint && npm run format:check && npm run test"
  },
  "files": [
    "dist/src",
    "README.md",
    "LICENSE",
    "assets"
  ],
  "keywords": [
    "hpkv",
    "websocket",
    "key-value store",
    "database",
    "key value store",
    "key value database",
    "client sdk",
    "high-performance key value",
    "pub-sub",
    "typescript"
  ],
  "author": "HPKV Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hpkv-io/websocket-client"
  },
  "bugs": {
    "url": "https://github.com/hpkv-io/websocket-client/issues"
  },
  "homepage": "https://github.com/hpkv-io/websocket-client/sdk/node#readme",
  "dependencies": {
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2"
  }
}
